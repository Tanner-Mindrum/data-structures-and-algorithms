import math

def binary_gap():

    # Obtain binary array from user
    binary_list = input("Enter list of binary numbers (no spaces): ")

    # Iterate through string and find position that splits the 0s and 1s
    # Do this by returning first index where current position is 0 and it's next is 1
    for i in range(len(binary_list)):
        if int(binary_list[i]) == 0 and int(binary_list[i + 1]) == 1:
            return i + 1

